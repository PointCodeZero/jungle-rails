<div class="well">
  <%= form_for :review, url: "/products/#{@product.id}/reviews" do |f| %>

      <%= f.label :rating, class: "review-rating" %>
      <%= f.select :rating, (0..5) %>
      <br>

      <%= f.label :description, class: "review-desc-label" %> 
      <br>
      <%= f.text_area :description, class: "review-textarea" %>
      <br>

    <%= f.submit "Submit", class: "btn btn-info" %>

  <% end %>
</div>
